+# -------- CUTLASS source vs. system headers -------------------------------
+# By default vLLM fetches CUTLASS with FetchContent. Allow using a system-
+# installed headers-only CUTLASS by passing VLLM_CUTLASS_PREFIX.
+# This sets CUTLASS_INCLUDE_DIR and CUTLASS_TOOLS_UTIL_INCLUDE_DIR and skips
+# FetchContent_Declare/MakeAvailable.
+#
+# Usage:
+#   -DVLLM_CUTLASS_PREFIX=/path/to/cutlass/installation
+#   or environment VLLM_CUTLASS_PREFIX
+#
+set(_VLLM_CUTLASS_PREFIX "${VLLM_CUTLASS_PREFIX}")
+if(NOT _VLLM_CUTLASS_PREFIX AND DEFINED ENV{VLLM_CUTLASS_PREFIX})
+  set(_VLLM_CUTLASS_PREFIX "$ENV{VLLM_CUTLASS_PREFIX}")
+endif()
+
+if(_VLLM_CUTLASS_PREFIX)
+  file(TO_CMAKE_PATH "${_VLLM_CUTLASS_PREFIX}" _VLLM_CUTLASS_PREFIX)
+  set(CUTLASS_INCLUDE_DIR "${_VLLM_CUTLASS_PREFIX}/include")
+  if(EXISTS "${_VLLM_CUTLASS_PREFIX}/tools/util/include")
+    set(CUTLASS_TOOLS_UTIL_INCLUDE_DIR "${_VLLM_CUTLASS_PREFIX}/tools/util/include")
+  endif()
+  # If examples exist (rare in installs), expose CUTLASS_DIR so MLA extras can use them.
+  if(EXISTS "${_VLLM_CUTLASS_PREFIX}/examples")
+    set(CUTLASS_DIR "${_VLLM_CUTLASS_PREFIX}")
+  endif()
+  set(VLLM_USE_SYSTEM_CUTLASS_HEADERS ON)
+endif()
