{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Schema for uenv configurations",
    "type": "object",
    "required": ["clusters", "uenvs"],
    "additionalProperties": false,
    "properties": {
        "clusters" : {
            "type": "object",
            "additionalProperties": false,
            "patternProperties": {
                "^[a-z0-9]+$": {
                    "type": "object",
                    "required": ["targets", "runner"],
                    "additionalProperties": false,
                    "properties": {
                        "targets": {
                            "type": "array",
                            "items": {
                                "type": "object",
                                "required": ["uarch", "partition"],
                                "additionalProperties": false,
                                "properties": {
                                    "uarch": {
                                        "type": "string",
                                        "enum": ["zen2", "zen3", "a100", "mi200"]
                                    },
                                    "partition": {"type": "string"},
                                    "variables": {
                                        "type": "object",
                                        "patternProperties": {
                                            "^[\\w.-]+$": {
                                                "type": "string"
                                            }
                                        },
                                        "default": {}
                                    }
                                }
                            }
                        },
                        "runner": {
                            "oneOf": [
                                {
                                    "type": "object",
                                    "additionalProperties": false,
                                    "properties": {
                                        "slurm-tag": {"type": "string"},
                                        "baremetal-tag":  {
                                            "oneOf": [
                                                {"type" : "string"},
                                                {"type" : "null"}
                                            ]
                                        }
                                    }
                                },
                                {"enum": ["f7t"]}
                            ],
                            "default": "fjt"
                        }
                    }
                }
            }
        },
        "uenvs" : {
            "type": "object",
            "$comment": "a list of named uenv: e.g. gromacs, prgenv-gnu and cp2k",
            "additionalProperties": false,
            "patternProperties": {
                "^[\\w.-]+$": {
                    "type": "object",
                    "$comment": "a list of versions, e.g. 2023, v1, 23.1.0, 1.2-rc0",
                    "additionalProperties": false,
                    "patternProperties": {
                        "^[\\w.-]+$": {
                            "type": "object",
                            "required": ["recipes", "deploy"],
                            "additionalProperties": false,
                            "properties": {
                                "recipes":{
                                    "$comment": "a dictionary with architecture types as keys",
                                    "type":"object",
                                    "additionalProperties": false,
                                    "patternProperties": {
                                        "^(zen2|zen3|a100|mi200)$": {"type": "string"}
                                    }
                                },
                                "deploy": {
                                    "$comment": "a dictionary with clusters as keys, and lists of arch types values",
                                    "type" : "object",
                                    "additionalProperties": false,
                                    "patternProperties": {
                                        "^[\\w.-]+$": {
                                            "type": "array",
                                            "items": {
                                                "type": "string",
                                                "enum": ["zen2", "zen3", "a100", "mi200"]
                                            }
                                        }
                                    }
                                },
                                "develop": {"type": "boolean", "default": false},
                                "mount":   {"type": "string", "default": "/user-environment"}
                            }
                        }
                    }
                }
            }
        }
    }
}

